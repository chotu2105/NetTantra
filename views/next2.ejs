  color: white;
  padding: 15px 55px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
}
.error-stm{
    max-height: 5vh;
    background-color:white;
    color:red;
    display: flex;
    align-items: center;
    padding: 4px;
    justify-content: space-between;
    border:2px solid red;
}
.error-stm >h1{
    margin: auto;
    text-transform: capitalize;

}

button{
  background-color:  rgba(0, 9, 9, 0.499);
  border: none;
  color: white;
  padding: 15px 55px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
}
.close-btn{
    height: 35px;
    width:35px;
    border-radius: 2px;
    padding: 0;
    background: red;
}
.inp{
