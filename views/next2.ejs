            <input type="file" name="doc2"/> -->
            <button type="submit" >SUBMIT</button>
            </div>
            </div>
        </form>
    </div>
</body>
<script>
    document.querySelector(".close-btn").addEventListener("click",(e)=>{
 e.preventDefault();
 document.querySelector(".error-stm").style.display="none"
 
    })
 </script>
</html>